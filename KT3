<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
<xsl:key name="teacherBorisov" match="course" use="teachers/teacher"/>
<xsl:key name="findtopic" match="course" use="keywords/keyword"/>
<xsl:template match="/">
<h1>Наши курсы</h1>
<h3>Курсы, которые читает Борисов И.О.</h3>
        <ul>
          <xsl:for-each select="key('teacherBorisov', 'Борисов И.О.')">
            <li><xsl:value-of select="title"/></li>
          </xsl:for-each>
        </ul>
<h3>Курсы, которые используют XML</h3>
        <ul>
          <xsl:for-each select="key('findtopic', 'XML')">
            <li><xsl:value-of select="title"/></li>
          </xsl:for-each>
        </ul>
<h3>Курсы в которых есть XSLT и обучает Борисов</h3>
        <ul>
          <xsl:for-each select="key('findtopic', 'XSLT')[teachers/teacher='Борисов И.О.']">
            <li><xsl:value-of select="title"/></li>
          </xsl:for-each>
        </ul>

</xsl:template>
</xsl:stylesheet>
